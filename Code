<?php
function calculateFunctionY($x, $a) {
    if (!is_numeric($x) || !is_numeric($a)) {
        return "Ошибка: Введите числовые значения для X и A.";
    }

    if ($x < 0) {
        if ($x == 0) { // Избегаем деления на ноль, хотя по условию x < 0, но на всякий случай.
            return "Ошибка: Деление на ноль при x = 0 и x < 0 (не должно произойти).";
        }
        return $a / $x;
    } else { // x >= 0
        if ($a - $x < 0) {
            return "Ошибка: Выражение под корнем отрицательное (a - x < 0).";
        }
        $denominator = sqrt($a - $x);
        if ($denominator == 0) {
            return "Ошибка: Деление на ноль, корень равен 0 (a - x = 0).";
        }
        return 1 / $denominator;
    }
}

// Получаем значения из GET-параметров
$x_func = isset($_GET['x_func']) ? $_GET['x_func'] : null;
$a_func = isset($_GET['a_func']) ? $_GET['a_func'] : null;
$result_func = null;

if ($x_func !== null && $a_func !== null) {
    $result_func = calculateFunctionY($x_func, $a_func);
}
?>

<!DOCTYPE html>
<html>
<head>
    <title>Вычисление функции Y</title>
</head>
<body>
    <h1>Вычисление функции Y</h1>
    <form method="get">
        <label for="x_func">Значение X:</label>
        <input type="text" name="x_func" id="x_func" value="<?php echo htmlspecialchars($x_func); ?>"><br><br>

        <label for="a_func">Значение A:</label>
        <input type="text" name="a_func" id="a_func" value="<?php echo htmlspecialchars($a_func); ?>"><br><br>

        <input type="submit" value="Вычислить Y">
    </form>

    <?php if ($result_func !== null): ?>
        <h2>Результат функции Y:</h2>
        <p><?php echo $result_func; ?></p>
    <?php endif; ?>
</body>
</html>
