    <title>Тест PHP</title>
</head>
<body>

<?php
// 5.1 Создание PHP-сценария
echo '<p>Привет, мир!</p>'; // Выводим текст "Привет, мир!" в параграфе
?>

<?php
// 5.2 Изолирование PHP-сценария
$expression = true; // Задаем значение переменной $expression

if ($expression == true): ?>
    <p>Это будет отображено, если выражение истинно.</p>
<?php else: ?>
    <p>В ином случае будет отображено это.</p>
<?php endif; ?>

<?php
// 5.3 Применение условия в PHP-сценарии
$expression = false; // Меняем значение переменной для тестирования

if ($expression == true) {
    echo '<p>Это будет отображено, если выражение истинно.</p>'; // Вывод при true
} else {
    echo '<p>В ином случае будет отображено это.</p>'; // Вывод при false
}
?>

<?php
// 5.4 Объявление переменных
$a = 5; // Присваиваем переменной $a значение 5
$b = 10; // Присваиваем переменной $b значение 10

$sum = $a + $b; // Вычисляем сумму переменных $a и $b
echo "<p>Результат сложения \$a и \$b: $sum</p>"; // Выводим результат сложения
?>

<?php
// 5.5 Добавление комментариев
// Комментарий к переменной $a
$a = 5; // Присваиваем переменной $a значение 5

// Комментарий к переменной $b
$b = 10; // Присваиваем переменной $b значение 10

// Комментарий к вычислению суммы
$sum = $a + $b; // Вычисляем сумму переменных $a и $b

// Комментарий к выводу результата
