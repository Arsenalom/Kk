<?php
function isLeapYear($year) {
    return ($year % 4 == 0 && $year % 100 != 0) || ($year % 400 == 0);
}

function getDaysInMonth($month, $year) {
    // *Добавляем проверку корректности месяца*
    if (!is_int($month) || $month < 1 || $month > 12) {
        return "Ошибка: Некорректный номер месяца. Месяц должен быть от 1 до 12."; // Возвращаем сообщение об ошибке
    }
    // *Можно добавить проверку года, если необходимо (например, на положительное число)*
    if (!is_int($year) || $year < 0) { // Пример проверки года на неотрицательное значение
        return "Ошибка: Некорректный год. Год должен быть неотрицательным числом."; // Возвращаем сообщение об ошибке
    }

    if ($month == 2) {
        return isLeapYear($year) ? 29 : 28;
    } elseif (in_array($month, [4, 6, 9, 11])) {
        return 30;
    } else {
        return 31;
    }
}

// Пример использования
$year = 2024;
$month = 13; // Некорректный месяц
$isLeap = isLeapYear($year) ? "високосный" : "не високосный";
$days = getDaysInMonth($month, $year);
echo "Год $year - $isLeap, в месяце $month дней: $days"; // Теперь выведет сообщение об ошибке
?>
